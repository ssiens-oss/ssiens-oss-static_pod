[Unit]
Description=StaticWaves OAuth Token Refresh
Documentation=https://github.com/staticwaves/pod-engine
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=www-data
Group=www-data
WorkingDirectory=/opt/staticwaves_pod
EnvironmentFile=/opt/staticwaves_pod/.env.local

ExecStart=/usr/bin/python3 -c "from staticwaves_pod.tiktok.oauth import refresh; refresh()"

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=staticwaves-oauth
