# StaticWaves POD Studio - Environment Configuration Template
# Copy this file to .env.local for local development

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Gemini API Key (optional - for AI-powered design generation)
# Get your key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=

# =============================================================================
# PRINTIFY API CONFIGURATION
# =============================================================================

# Printify API Token (for production mode)
# Get your token from: https://printify.com/app/account/api
VITE_PRINTIFY_API_TOKEN=

# Printify Shop ID
VITE_PRINTIFY_SHOP_ID=

# =============================================================================
# APPLICATION MODE
# =============================================================================

# Mode: 'mock' or 'production'
# - mock: Uses simulated data for demonstration
# - production: Connects to real Printify API
VITE_APP_MODE=mock

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable real-time design generation
VITE_ENABLE_AI_GENERATION=false

# Enable batch processing
VITE_ENABLE_BATCH_MODE=true

# Maximum batch size
VITE_MAX_BATCH_SIZE=10

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Application URL (for RunPod or production deployment)
VITE_APP_URL=http://localhost:5173

# Analytics ID (optional)
VITE_ANALYTICS_ID=

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Logging level: 'debug', 'info', 'warn', 'error'
VITE_LOG_LEVEL=info

# Enable performance monitoring
VITE_ENABLE_MONITORING=false
