# POD Dashboard Configuration
# Unified configuration for all POD tools

# Flask Server
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# Claude API (for prompter)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Printify API (for gateway)
PRINTIFY_API_KEY=your_printify_api_key_here
PRINTIFY_SHOP_ID=your_shop_id_here
PRINTIFY_BLUEPRINT_ID=3
PRINTIFY_PROVIDER_ID=99

# Storage paths
POD_IMAGE_DIR=/workspace/comfyui/output
POD_STATE_FILE=/workspace/dashboard/state.json
POD_ARCHIVE_DIR=/workspace/dashboard/archive
PROMPTER_OUTPUT_DIR=/workspace/prompts

# ComfyUI (optional)
COMFYUI_API_URL=http://localhost:8188
