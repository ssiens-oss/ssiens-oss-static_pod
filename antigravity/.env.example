# =============================================================================
# ANTIGRAVITY POD ORCHESTRATION SYSTEM - CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# LLM API Keys (Required for AI decision-making)
# -----------------------------------------------------------------------------

# OpenAI API key (for GPT models)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic API key (for Claude models)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# xAI Grok API key (optional, for adversarial thinking)
# Note: Grok integration is currently mock/placeholder
GROK_API_KEY=

# -----------------------------------------------------------------------------
# Notification Integrations
# -----------------------------------------------------------------------------

# Slack webhook URL (highly recommended for alerts)
# Get from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# Email notifications (optional)
EMAIL_TO=ops@yourdomain.com
EMAIL_FROM=antigravity@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Generic webhook (optional, for custom integrations)
WEBHOOK_URL=https://your-service.com/webhook

# -----------------------------------------------------------------------------
# Memory & Learning
# -----------------------------------------------------------------------------

# Notion integration (optional, for human-readable logs)
# Get from: https://www.notion.so/my-integrations
NOTION_TOKEN=secret_...
NOTION_DB_ID=...

# Vector memory persistence directory (optional)
# If not set, uses in-memory storage
VECTOR_MEMORY_DIR=/data/antigravity/memory

# Decision provenance log file
PROVENANCE_LOG_FILE=provenance.jsonl

# -----------------------------------------------------------------------------
# POD Pipeline Configuration
# -----------------------------------------------------------------------------

# ComfyUI output directory (where designs are generated)
COMFYUI_OUTPUT_DIR=/data/comfyui/output

# POD Gateway integration (if using existing gateway)
POD_STATE_FILE=/workspace/gateway/state.json
POD_IMAGE_DIR=/workspace/comfyui/output
POD_ARCHIVE_DIR=/workspace/gateway/archive

# Default brand name
POD_DEFAULT_BRAND=StaticWaves

# Default product type (tshirt or hoodie)
POD_DEFAULT_PRODUCT_TYPE=hoodie

# -----------------------------------------------------------------------------
# Printify Configuration (from existing setup)
# -----------------------------------------------------------------------------

PRINTIFY_API_KEY=your-printify-api-key
PRINTIFY_SHOP_ID=your-shop-id

# -----------------------------------------------------------------------------
# Shopify Configuration (from existing setup)
# -----------------------------------------------------------------------------

SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your-access-token
SHOPIFY_API_VERSION=2024-01

# -----------------------------------------------------------------------------
# Zazzle Configuration
# -----------------------------------------------------------------------------

# Zazzle Associate ID (for affiliate API)
# Get from: https://www.zazzle.com/sell/associates
ZAZZLE_ASSOCIATE_ID=your-associate-id

# Zazzle API Key (if using full API)
# Get from: https://www.zazzle.com/sell/developers
ZAZZLE_API_KEY=your-api-key

# Your Zazzle store ID
# Find in your Zazzle store URL
ZAZZLE_STORE_ID=your-store-id

# Default Zazzle product template
# Options: tshirt_basic, tshirt_premium, hoodie_basic, hoodie_premium,
#          poster, mug
ZAZZLE_DEFAULT_TEMPLATE=tshirt_basic

# Enable Zazzle integration
ENABLE_ZAZZLE=true

# -----------------------------------------------------------------------------
# Behavioral Settings
# -----------------------------------------------------------------------------

# Dry run mode (plan but don't execute)
DRY_RUN=false

# Require human approval for all actions
REQUIRE_HUMAN=true

# Enable A/B testing (generate multiple variants)
ENABLE_AB_TESTING=true

# Disagreement threshold for escalation (0.0-1.0)
DISAGREEMENT_THRESHOLD=0.05

# Confidence threshold for escalation (0.0-1.0)
CONFIDENCE_THRESHOLD=0.7

# Risk score threshold for blocking (0-100)
RISK_SCORE_THRESHOLD=50

# -----------------------------------------------------------------------------
# Verification Settings
# -----------------------------------------------------------------------------

# Enable Playwright verification
ENABLE_VERIFICATION=true

# Playwright headless mode
PLAYWRIGHT_HEADLESS=true

# Screenshot directory for verification
SCREENSHOT_DIR=/data/antigravity/screenshots

# Verification timeout (milliseconds)
VERIFICATION_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Development & Debugging
# -----------------------------------------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=false
