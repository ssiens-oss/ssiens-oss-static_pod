# StaticWaves POD Studio - Production Environment Configuration
# RunPod Deployment Settings

# Application
NODE_ENV=production
APP_NAME=staticwaves-pod-studio
APP_VERSION=6.0-beta.1

# Server
PORT=80
HOST=0.0.0.0

# Beta Configuration
BETA_MODE=true
BETA_USERS_ALLOWED=true
MAX_BETA_USERS=1000

# Feature Flags
FEATURE_FLAG_BATCH_MODE=true
FEATURE_FLAG_EDITOR=true
FEATURE_FLAG_ADVANCED_ANALYTICS=false
FEATURE_FLAG_EXPORT=true

# Performance
MAX_CONCURRENT_PROCESSES=20
WORKER_THREADS=auto
CACHE_ENABLED=true
CACHE_TTL=3600

# Security
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_ACCESS_LOGS=true
ENABLE_ERROR_LOGS=true

# Monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
ENABLE_METRICS=true
ENABLE_ANALYTICS=true

# RunPod Specific
RUNPOD_DEPLOYED=true
RUNPOD_POD_ID=${RUNPOD_POD_ID}
RUNPOD_GPU_ID=${RUNPOD_GPU_ID}

# Resource Limits
MAX_MEMORY_MB=8192
MAX_CPU_PERCENT=80

# GPU Settings (if applicable)
GPU_MEMORY_FRACTION=0.9
GPU_ALLOW_GROWTH=true

# Storage
UPLOAD_DIR=/workspace/uploads
TEMP_DIR=/tmp
MAX_UPLOAD_SIZE_MB=20

# Session
SESSION_SECRET=change-me-in-production
SESSION_TIMEOUT_MINUTES=60

# API Configuration (for future backend integration)
# API_URL=
# API_KEY=
# API_TIMEOUT_MS=30000

# External Services (optional)
# GEMINI_API_KEY=
# PRINTIFY_API_KEY=
# PRINTIFY_SHOP_ID=

# Webhooks (optional)
# WEBHOOK_URL=
# SLACK_WEBHOOK_URL=
# DISCORD_WEBHOOK_URL=

# Database (for future use)
# DATABASE_URL=
# DATABASE_POOL_SIZE=10

# Redis (for caching - future)
# REDIS_URL=
# REDIS_TTL=3600

# Sentry Error Tracking (optional)
# SENTRY_DSN=
# SENTRY_ENVIRONMENT=production

# Backup
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7
