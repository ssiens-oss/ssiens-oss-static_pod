# Production POD Engine Environment Variables

# API Keys (REQUIRED)
CLAUDE_API_KEY=sk-ant-your-api-key-here

# ComfyUI
COMFYUI_API_URL=http://127.0.0.1:8188
COMFYUI_OUTPUT_DIR=./comfyui_output

# Database
DATABASE_TYPE=memory  # or 'postgres'
DATABASE_URL=postgresql://pod_user:pod_password@localhost:5432/pod_engine

# Printify
PRINTIFY_API_KEY=your_printify_api_key_here
PRINTIFY_SHOP_ID=your_shop_id_here

# Shopify
SHOPIFY_STORE_URL=your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=shpat_your_token_here

# TikTok Shop
TIKTOK_APP_KEY=your_app_key
TIKTOK_APP_SECRET=your_app_secret
TIKTOK_SHOP_ID=your_shop_id
TIKTOK_ACCESS_TOKEN=your_access_token

# Etsy
ETSY_API_KEY=your_etsy_api_key
ETSY_SHOP_ID=your_shop_id
ETSY_ACCESS_TOKEN=your_access_token

# Instagram
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_account_id

# Facebook
FACEBOOK_PAGE_ID=your_page_id
FACEBOOK_ACCESS_TOKEN=your_fb_token
FACEBOOK_CATALOG_ID=your_catalog_id

# Engine Configuration
WORKER_COUNT=3
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MS=3600000
RETRY_DELAY_MS=60000
ENABLE_AUTO_RETRY=true
HEARTBEAT_INTERVAL_MS=30000

# API Server
API_PORT=3000
API_HOST=0.0.0.0
API_ENABLE_CORS=true
API_AUTH_TOKEN=your_secret_token_change_this_in_production

# Configuration File Path
CONFIG_PATH=./production/config.json

# Node Environment
NODE_ENV=production
