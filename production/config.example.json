{
  "orchestrator": {
    "comfyui": {
      "apiUrl": "http://127.0.0.1:8188",
      "outputDir": "./comfyui_output"
    },
    "claude": {
      "apiKey": "sk-ant-..."
    },
    "storage": {
      "type": "local",
      "basePath": "./storage"
    },
    "printify": {
      "apiKey": "your_printify_api_key",
      "shopId": "your_shop_id"
    },
    "shopify": {
      "storeUrl": "your-store.myshopify.com",
      "accessToken": "shpat_..."
    },
    "tiktok": {
      "appKey": "your_app_key",
      "appSecret": "your_app_secret",
      "shopId": "your_shop_id",
      "accessToken": "your_access_token"
    },
    "etsy": {
      "apiKey": "your_etsy_api_key",
      "shopId": "your_shop_id",
      "accessToken": "your_access_token"
    },
    "instagram": {
      "accessToken": "your_instagram_token",
      "businessAccountId": "your_business_account_id"
    },
    "facebook": {
      "pageId": "your_page_id",
      "accessToken": "your_fb_token",
      "catalogId": "your_catalog_id"
    },
    "options": {
      "enabledPlatforms": ["printify", "shopify"],
      "autoPublish": false,
      "tshirtPrice": 19.99,
      "hoodiePrice": 34.99
    }
  },
  "engine": {
    "maxConcurrentJobs": 5,
    "jobTimeout": 3600000,
    "retryDelay": 60000,
    "enableAutoRetry": true,
    "heartbeatInterval": 30000
  },
  "database": {
    "type": "memory",
    "connectionString": "postgresql://user:password@localhost:5432/pod_engine"
  },
  "workerPool": {
    "workerCount": 3,
    "autoRestart": true,
    "maxRestarts": 3,
    "restartDelay": 5000
  },
  "api": {
    "port": 3000,
    "host": "0.0.0.0",
    "enableCors": true,
    "authToken": "your_secret_token_here"
  }
}
